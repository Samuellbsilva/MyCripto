{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/css/(.*)",
      "headers": { "Content-Type": "text/css" },
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "headers": { "Content-Type": "application/javascript" },
      "dest": "/js/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
